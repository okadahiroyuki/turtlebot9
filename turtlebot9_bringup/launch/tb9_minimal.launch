<launch>
  <arg name="base"       default="kobuki"/>
  <arg name="battery"    default="$(optenv TURTLEBOT_BATTERY /proc/acpi/battery/BAT0)"/>
  <arg name="stacks"     default="hexagons"/> 
  <arg name="3d_sensor"  default="kinect"/> 
  <arg name="simulation" default="$(optenv TURTLEBOT_SIMULATION false)"/>
  <remap from="mobile_base/commands/velocity" to="cmd_vel" />
  <param name="/use_sim_time" value="$(arg simulation)"/>
  <include file="$(find turtlebot_bringup)/launch/includes/robot.launch.xml">
    <arg name="base" value="$(arg base)" />
    <arg name="stacks" value="$(arg stacks)" />
    <arg name="3d_sensor" value="$(arg 3d_sensor)" />
  </include>

  <include file="$(find trcp_bringup)/launch/includes/tb_kobuki_mobile_base.launch.xml" />

  <include file="$(find trcp_bringup)/launch/includes/netbook.launch.xml">
    <arg name="battery" value="$(arg battery)" />
  </include>

</launch>
~          
